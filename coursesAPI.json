  "components": {
    "schemas": {
      "Department": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Department code (ex: INSO)"
          },
          "name": {
            "type": "string",
            "description": "Full name of the department"
          }
        }
      },
      "CourseSection": {
        "type": "object",
        "properties": {
          "courseCode": {
            "type": "string"
          },
          "courseName": {
            "type": "string"
          },
          "sectionCode": {
            "type": "string"
          },
          "credits": {
            "type": "integer"
          },
          "graduateLevel": {
            "type": "string"
          },
          "prerequisites": {
            "type": "string"
          },
          "corequisites": {
            "type": "string"
          },
          "capacity": {
            "type": "integer"
          },
          "availableSlots": {
            "type": "integer"
          },
          "reserved": {
            "type": "boolean"
          },
          "meetings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "professors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
