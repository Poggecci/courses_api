    "/departments/{department}": {
      "get": {
        "summary": "Get courses in a department ",
        "operationId": "getCoursesByDepartment",
        "parameters": [
          {
            "name": "department",
            "in": "path",
            "required": true,
            "description": "Department code",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "term",
            "in": "query",
            "required": true,
            "description": "Academic term",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "year",
            "in": "query",
            "required": true,
            "description": "Academic year",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detailed information about courses in a department",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "courseCode": {
                            "type": "string"
                          },
                          "courseName": {
                            "type": "string"
                          },
                          "sectionCode": {
                            "type": "string"
                          },
                          "credits": {
                            "type": "integer"
                          },
                          "graduateLevel": {
                            "type": "string"
                          },
                          "prerequisites": {
                            "type": "string"
                          },
                          "corequisites": {
                            "type": "string"
                          },
                          "capacity": {
                            "type": "integer"
                          },
                          "availableSlots": {
                            "type": "integer"
                          },
                          "reserved": {
                            "type": "boolean"
                          },
                          "meetings": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "professors": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "misc": {
                            "type": "string"
                          }
                        }
                      },
                      "example": [
                        {
                          "courseCode": "INSO4101",
                          "courseName": "INTRODUCTION TO SOFTWARE ENGINEERING",
                          "sectionCode": "080",
                          "credits": 3,
                          "graduateLevel": "LowerDivision",
                          "prerequisites": "ICOM4035 or CIIC4020",
                          "corequisites": "",
                          "capacity": 30,
                          "availableSlots": 25,
                          "reserved": false,
                          "meetings": ["2:30 pm - 3:20 pm LWV S 113"],
                          "professors": ["Marko Schutz"],
                          "misc": ""
                        },
                        {
                          "courseCode": "INSO4116",
                          "courseName": "SOFTWARE DESIGN",
                          "sectionCode": "070",
                          "credits": 3,
                          "graduateLevel": "LowerDivision",
                          "prerequisites": "INSO4101 or ICOM4009",
                          "corequisites": "",
                          "capacity": 30,
                          "availableSlots": 20,
                          "reserved": false,
